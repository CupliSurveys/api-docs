                },
                "country_id": {
                    "type": "integer",
                    "format": "int64"
                },
                "name_en": {
                    "type": "string"
                },
                "name_ru": {
                    "type": "string"
                }
            }
        },
        "Offer": {
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "campaign_id": {
                    "type": "integer",
                    "format": "int64"
                },
                "provider_id": {
                    "type": "integer",
                    "format": "int64"
                },
                "remote_offer_id": {
                    "type": "integer",
                    "format": "int64"
                },
                "settings": {
                    "type": "object",
                    "format": "json"
                },
                "created_at": {
                    "type": "string",
                    "format": "date-time"
                },
                "updated_at": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "Region": {
            "properties": {
                "id": {
                    "type": "integer",
